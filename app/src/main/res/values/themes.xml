<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.TFGDanielMario" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.TFGDanielMario" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Colores primarios -->
        <item name="colorPrimary">@color/nav_orange</item>
        <item name="colorPrimaryVariant">@color/nav_orange_dark</item>
        <item name="colorOnPrimary">@color/black</item>
        
        <!-- Colores de la interfaz -->
        <item name="android:navigationBarColor">@color/black</item>
        <item name="android:statusBarColor">@color/black</item>
        <item name="android:windowBackground">@color/background</item>
        
        <!-- Colores de componentes -->
        <item name="toolbarStyle">@style/Widget.App.Toolbar</item>
        <item name="materialButtonStyle">@style/Widget.App.MaterialButton</item>
        <item name="buttonStyle">@style/Widget.App.Button</item>
        <item name="textInputStyle">@style/Widget.App.TextInputLayout</item>
    </style>

    <!-- Estilo personalizado para la Toolbar -->
    <style name="Widget.App.Toolbar" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="android:background">@color/nav_orange</item>
        <item name="titleTextColor">@color/white</item>
    </style>

    <!-- Estilo personalizado para los botones -->
    <style name="Widget.App.Button" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/nav_orange</item>
        <item name="android:textColor">@color/black</item>
        <item name="cornerRadius">8dp</item>
        <item name="fontFamily">@font/plus_jakarta_sans_bold</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Estilo personalizado para MaterialButton -->
    <style name="Widget.App.MaterialButton" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/nav_orange</item>
        <item name="android:textColor">@color/black</item>
        <item name="cornerRadius">8dp</item>
        <item name="fontFamily">@font/plus_jakarta_sans</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Estilo personalizado para TextInputLayout -->
    <style name="Widget.App.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/nav_orange</item>
        <item name="hintTextColor">@color/nav_orange</item>
        <item name="fontFamily">@font/plus_jakarta_sans</item>
        <item name="android:textColorHint">#AAAAAA</item>
    </style>

    <!-- Estilo para el DialogFragment -->
    <style name="DialogTheme" parent="Theme.MaterialComponents.Dialog">
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowMinWidthMajor">85%</item>
        <item name="android:windowMinWidthMinor">85%</item>
        <item name="fontFamily">@font/plus_jakarta_sans</item>
        <item name="colorPrimary">@color/nav_orange</item>
        <item name="colorAccent">@color/nav_orange</item>
        <item name="android:textColorHint">#AAAAAA</item>
    </style>
</resources>