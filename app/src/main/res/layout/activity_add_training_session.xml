<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#121212">

    <!-- Input mejorado para el nombre -->
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:hint="Nombre de la rutina"
        app:boxStrokeColor="#FFFFFF"
        app:hintTextColor="#FFFFFF"
        android:textColorHint="#AAAAAA"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/tvName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:inputType="textCapSentences"
            android:maxLines="1" />

    </com.google.android.material.textfield.TextInputLayout>

    <!-- Botón para añadir ejercicio -->
    <Button
        android:id="@+id/btnAddExercise"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Añadir Ejercicio"
        android:textAllCaps="false"
        android:backgroundTint="#2C2C2E"
        android:textColor="#FFFFFF"
        android:drawableStart="@android:drawable/ic_input_add"
        android:padding="12dp"
        android:layout_marginBottom="16dp" />

    <!-- Lista de ejercicios -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:id="@+id/exerciseList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />

    </ScrollView>

    <!-- Botón para guardar la sesión -->
    <Button
        android:id="@+id/btnSaveSession"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Guardar Rutina"
        android:textAllCaps="false"
        android:backgroundTint="#2C2C2E"
        android:textColor="#FFFFFF"
        android:drawableStart="@android:drawable/ic_menu_save"
        android:padding="12dp"
        android:layout_marginTop="16dp" />

</LinearLayout>
