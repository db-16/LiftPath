<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#111111">

    <!-- Perfil: Imagen -->
    <ImageView
        android:id="@+id/ivProfileImage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="32dp"
        android:src="@drawable/ic_arrow_right"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Nombre, edad -->
    <TextView
        android:id="@+id/tvNameAge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sophie, 26"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/ivProfileImage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <!-- Cargo y empresa -->
    <TextView
        android:id="@+id/tvJob"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Growth Marketer at Google"
        android:textColor="#AAAAAA"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/tvNameAge"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Ubicación -->
    <TextView
        android:id="@+id/tvLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="San Francisco, CA"
        android:textColor="#AAAAAA"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/tvJob"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Botón de configuración -->
    <Button
        android:id="@+id/btnSettings"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Settings"
        android:backgroundTint="#333333"
        android:textColor="#FFFFFF"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/tvLocation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Título "Activity" -->
    <TextView
        android:id="@+id/tvActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Activity"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/btnSettings"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Cuadros de estadísticas -->
    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/gridStats"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:columnCount="2"
        app:layout_constraintTop_toBottomOf="@id/tvActivity"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:rowCount="2"
        tools:ignore="MissingClass">

        <!-- Total Workouts -->
        <TextView
            style="@style/StatCard"
            android:text="Workouts\n96" />

        <!-- Weekly workouts -->
        <TextView
            style="@style/StatCard"
            android:text="Weekly Workouts.\n3.7" />

        <!-- Weigth -->
        <TextView
            android:id="@+id/tvCurrentWeight"
            style="@style/StatCard"
            />

        <!-- Goal -->
        <TextView
            android:id="@+id/tvGoal"
            style="@style/StatCard"
             />
    </androidx.gridlayout.widget.GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

